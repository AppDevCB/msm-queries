<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor

</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
<%= @the_actor.image %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %>
    <%= time_ago_in_words(Time.now - 2.hours)%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<%a=@p%>


<table border ="1">
<%a.each do |element|%>
  <tr>

    <td>
      <%= element.name%>
    </td>
  <td>
    <%@mov = @movies_lib.where({:id=>element.movie_id})%>
    <%s=@mov.at(0)%>

    <%dir =@directors_lib.where({:id=>s.director_id})%>
    <%f=dir.at(0)%>
    <%=pls=f.name%>
  </td>

</tr>
<%end%>
